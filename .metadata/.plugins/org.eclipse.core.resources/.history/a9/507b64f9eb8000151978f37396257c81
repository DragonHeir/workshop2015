package Level_1;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class DungeonsAndDragonsDice
{
	JFrame Frame;
	JPanel Panel;
	JLabel LastRoll;
	JLabel Total;
	JLabel LastRollNum;
	JLabel TotalNum;
	JButton FourDice;
	JButton SixDice;
	JButton EightDice;
	JButton TenDice;
	JButton TwelveDice;
	JButton TwentyDice;
	JButton Clear;
	
	public static void main(String[] args)
	{
		DungeonsAndDragonsDice d = new DungeonsAndDragonsDice();
	}
	public DungeonsAndDragonsDice()
	{
		Frame = new JFrame("D&D Dice Roller");
		Frame.setVisible(true);
		Frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		Frame.setSize(1000, 1000);
		Panel = new JPanel();
		LastRoll = new JLabel();
		Total = new JLabel();
		LastRollNum = new JLabel();
		TotalNum = new JLabel();
		FourDice = new JButton("4 Sided Dice");
		SixDice = new JButton("6 Sided Dice");
		EightDice = new JButton("8 Sided Dice");
		TenDice = new JButton("10 Sided Dice");
		TwelveDice = new JButton("12 Sided Dice");
		TwentyDice = new JButton("20 Sided Dice");
		Clear = new JButton("Clear");
		
		Frame.add(Panel);
		Panel.add(LastRoll);
		Panel.add(Total);
		Panel.add(LastRollNum);
		Panel.add(TotalNum);
		Panel.add(FourDice);
		Panel.add(SixDice);
		Panel.add(EightDice);
		Panel.add(TenDice);
		Panel.add(TwelveDice);
		Panel.add(TwentyDice);
		Panel.add(Clear);
		
	}
}
