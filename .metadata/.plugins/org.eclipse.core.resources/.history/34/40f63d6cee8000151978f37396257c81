package Level_1;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.Random;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class DungeonsAndDragonsDice implements ActionListener
{
	JFrame Frame;
	JPanel Panel;
	JLabel LastRoll;
	JLabel Total;
	JLabel LastRollNum;
	JLabel TotalNum;
	JButton FourDice;
	JButton SixDice;
	JButton EightDice;
	JButton TenDice;
	JButton TwelveDice;
	JButton TwentyDice;
	JButton Clear;

	public static void main(String[] args)
	{
		DungeonsAndDragonsDice d = new DungeonsAndDragonsDice();
	}

	public DungeonsAndDragonsDice()
	{
		Frame = new JFrame("D&D Dice Roller");
		Frame.setVisible(true);
		Frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		Frame.setSize(1000, 1000);
		Panel = new JPanel();
		LastRoll = new JLabel("Last Roll");
		Total = new JLabel("Total");
		LastRollNum = new JLabel("0");
		TotalNum = new JLabel("0");
		FourDice = new JButton("4 Sided Dice");
		FourDice.addActionListener(this);
		SixDice = new JButton("6 Sided Dice");
		SixDice.addActionListener(this);
		EightDice = new JButton("8 Sided Dice");
		EightDice.addActionListener(this);
		TenDice = new JButton("10 Sided Dice");
		TenDice.addActionListener(this);
		TwelveDice = new JButton("12 Sided Dice");
		TwelveDice.addActionListener(this);
		TwentyDice = new JButton("20 Sided Dice");
		TwentyDice.addActionListener(this);
		Clear = new JButton("Clear");

		Frame.add(Panel);
		Panel.add(LastRoll);
		Panel.add(Total);
		Panel.add(LastRollNum);
		Panel.add(TotalNum);
		Panel.add(FourDice);
		Panel.add(SixDice);
		Panel.add(EightDice);
		Panel.add(TenDice);
		Panel.add(TwelveDice);
		Panel.add(TwentyDice);
		Panel.add(Clear);

	}

	@Override
	public void actionPerformed(ActionEvent e)
	{
		if (e.getSource() == FourDice)
		{
			System.out.println("Four");
		}

	}

	int Four()
	{
		Random r = new Random();
		int f = r.nextInt(4) + 1;
		return f;
	}
}
