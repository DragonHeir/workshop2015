package Level_2;

import java.awt.Graphics;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.image.BufferedImage;
import java.util.ArrayList;
import java.util.Random;

import javax.swing.JPanel;
import javax.swing.Timer;

public class GamePanel extends JPanel implements ActionListener
{
	Timer blocktimer;
	gameobject bg;
	ArrayList<gameobject> blocks;
	public void paint(Graphics g)
	{
		bg.paint(g);
	}
	public GamePanel()
	{
		bg = new gameobject(0, 0, 256, 480, "Background.png");
		blocks = new ArrayList<gameobject>();
		blocktimer = new Timer(1000/4, this);
		blocktimer.start();
		addBlock();
	}
	@Override
	public void actionPerformed(ActionEvent e)
	{
		repaint();
	}
	int block()
	{
		Random r = new Random();
		int x = r.nextInt(16) + 1;
		x = x * 16;
		return x;
	}
	public void addBlock()
	{
		blocks.add(new gameobject(block(), 0, 16, 16, "block.png"));
	}
}
